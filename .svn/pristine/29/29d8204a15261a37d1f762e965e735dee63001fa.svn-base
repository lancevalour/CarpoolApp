<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff" >

    <RelativeLayout
        android:id="@+id/me_setting_title_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:alpha="1"
        android:background="#E16138" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="sans-serif-condensed"
            android:text="Setting"
            android:textSize="22sp" />

        <Button
            android:id="@+id/me_setting_back_button"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@android:color/transparent"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:text="back"
            android:textColor="#313131"
            android:textSize="22sp" />

        <Button
            android:id="@+id/me_setting_logout_button"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@android:color/transparent"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:text="log out"
            android:textColor="#313131"
            android:textSize="22sp" />
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/me_setting_my_photo_layout"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_below="@id/me_setting_title_layout"
        android:layout_marginTop="20dp" >

        <Button
            android:id="@+id/me_setting_my_photo_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/list_view_button_selector"
            android:fontFamily="sans-serif-condensed"
            android:gravity="left|center_vertical"
            android:paddingLeft="20dp"
            android:text="My Photo"
            android:textColor="#E16138"
            android:textSize="20dp" />

        <ImageButton
            android:id="@+id/me_setting_my_photo_imageButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="35dp"
            android:background="@drawable/edittext_background" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/me_setting_nickname_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/me_setting_my_photo_layout"
        android:layout_gravity="center"
        android:layout_marginTop="20dp" >

        <Button
            android:id="@+id/me_setting_nickname_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/list_view_button_selector"
            android:fontFamily="sans-serif-condensed"
            android:gravity="left|center_vertical"
            android:paddingLeft="20dp"
            android:text="Username"
            android:textColor="#E16138"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/me_setting_nickname_textView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="35dp"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:text="username"
            android:textColor="#313131"
            android:textSize="20sp" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/me_setting_password_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/me_setting_nickname_layout"
        android:layout_gravity="center"
        android:layout_marginTop="20dp" >

        <Button
            android:id="@+id/me_setting_password_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/list_view_button_selector"
            android:fontFamily="sans-serif-condensed"
            android:gravity="left|center_vertical"
            android:paddingLeft="20dp"
            android:text="Password"
            android:textColor="#E16138"
            android:textSize="20dp" />
    </FrameLayout>

</RelativeLayout>