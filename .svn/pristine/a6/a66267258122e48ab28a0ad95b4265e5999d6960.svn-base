<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/passenger_event_info_title_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:alpha="1"
        android:background="#E16138" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="sans-serif-condensed"
            android:text="Event info"
            android:textSize="22sp"
             />

        <Button
            android:id="@+id/passenger_event_info_back_button"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@android:color/transparent"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:text="back"
            android:textColor="#313131"
            android:textSize="22sp" />
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/passenger_event_info_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/passenger_event_info_title_layout"
        android:layout_marginTop="20dp"
        android:descendantFocusability="beforeDescendants"
        android:paddingLeft="15dp"
        android:paddingRight="15dp" >

        <RelativeLayout
            android:id="@+id/passenger_event_info_card_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/passenger_event_card_selector"
            android:descendantFocusability="afterDescendants"
            android:orientation="vertical"
            android:paddingBottom="15dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="15dp" >

            <RelativeLayout
                android:id="@+id/passenger_event_info_userInfo_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/passenger_event_info_imageView"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/edittext_background" />

                <TextView
                    android:id="@+id/passenger_event_info_postUsername_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/passenger_event_info_imageView"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Username"
                    android:textSize="12sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@id/passenger_event_info_userInfo_layout" >

                <TextView
                    android:id="@+id/passenger_event_info_title_textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Title"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/passenger_event_info_content_textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/passenger_event_info_title_textView"
                    android:layout_marginTop="10dp"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Content"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/passenger_event_info_date_textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/passenger_event_info_content_textView"
                    android:layout_marginTop="10dp"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Date"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/passenger_event_info_availableSeat_textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/passenger_event_info_date_textView"
                    android:layout_marginTop="10dp"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Seat number"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/passenger_event_info_final_confirm_driver_textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/passenger_event_info_availableSeat_textView"
                    android:layout_marginTop="10dp"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Driver name"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/passenger_event_info_final_confirm_extra_passenger_textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/passenger_event_info_final_confirm_driver_textView"
                    android:layout_marginTop="10dp"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Passenger name"
                    android:textSize="15sp" />
            </RelativeLayout>
        </RelativeLayout>
    </FrameLayout>

    <Button
        android:id="@+id/passenger_event_info_contact_button"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@id/passenger_event_info_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@android:color/transparent"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:text="contact"
        android:textColor="#E16138"
        android:textSize="22sp" />

</RelativeLayout>